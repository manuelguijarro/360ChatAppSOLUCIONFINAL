<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_layout"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color_mensaje_enviado"
        android:padding="8dp"
        android:layout_marginEnd="80dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/customborder"
            android:src="@drawable/baseline_camera_alt_24"
            android:padding="4dp"
            android:backgroundTint="@color/blanco_sombreado"
            android:layout_centerInParent="true"
            android:id="@+id/left_chat_imagen"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_chat_text"
            android:textColor="@color/white"
            android:textSize="18sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_layout"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color_mensaje_recibido"
        android:padding="8dp"
        android:layout_marginStart="80dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/customborder"
            android:src="@drawable/baseline_camera_alt_24"
            android:padding="4dp"
            android:backgroundTint="@color/blanco_sombreado"
            android:layout_centerInParent="true"
            android:id="@+id/right_chat_imagen"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text"
            android:textColor="@color/white"
            android:textSize="18sp"/>


    </LinearLayout>
</RelativeLayout>